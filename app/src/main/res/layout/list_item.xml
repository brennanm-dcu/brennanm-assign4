<!-- This is the Layout for the List containing each of the products for sale,
       each product has an ImageView and two TextViews-->

<!-- Horizontal Layout for a ImageView and two TextViews -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:padding="16dp">
    <!-- ImageView for a single list item -->
    <ImageView
        android:id="@+id/list_item_icon"
        android:layout_width="154dp"
        android:layout_height="121dp" />
    <!-- Verticle Layout for the two TextViews -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin">
        <!-- TextView for a single list item -->
        <TextView
            android:id="@+id/version_name"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:background="#f7f908"
            android:textColor="#1c1d20"
            android:textSize="18sp"
            android:textStyle="bold" />
        <!-- TextView for a single list item -->
        <TextView
            android:id="@+id/version_number"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:textColor="#E00707"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>